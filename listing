pipeline {
    agent any
    stages {
        stage('First stage') {
            steps {
                script {
                    echo "Hello"
                }
            }
            post {
                always {
                    
                        echo "Success!"
                    
                }
            }
        }
        stage('Second stage') {
            steps {
                script {
                    echo "Goodbye"
                }
            }
        }
    }
}
